<%= form_for @location, html: { class: "form-horizontal"}, validate: :location_validators do |f| %>
  
  <div class="form-group">
    <label class="control-label">Location name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
  	<label class="control-label">Country</label>
  	<%= f.text_field :country, class: 'form-control' %>
  </div>
  <div class="form-group">
      <label class="control-label">Responsible</label>
      <%= f.text_field :responsible, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Email</label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  
  <%= f.submit class: "btn btn-success fullwidthbutton" %>
  <%= link_to 'Back', locations_path, class: "btn btn-warning fullwidthbutton" %>
  
<% end %>
