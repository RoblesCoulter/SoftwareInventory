<%= form_for @embed_code_university, html: { class: "form-horizontal"}, validate: :embed_code_university_validators do |f| %>
  <div class="form-group">
    <label class="control-label">Acronym</label>
    <%= f.text_field :acronym, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <label class="control-label">Test Site</label>
    <%= f.text_field :test_site, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label">Test User</label><br>
    <%= f.text_field :test_user, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Test Password</label>
    <%= f.text_field :test_password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Comments</label>
    <%= f.text_area :comments, class: 'form-control' %>

  </div>

  <%= f.submit class: "btn btn-success fullwidthbutton" %>
  <%= link_to "Back", embed_code_universities_path, class: "btn btn-warning fullwidthbutton" %>
<% end %>
