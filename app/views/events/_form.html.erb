<%= form_for @event, html: { class: "form-horizontal"}, validate: :event_validators do |f| %>
  <div class="form-group">
    <label class="control-label">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Short Url</label>
    <%= f.text_field :short_url, class: 'form-control' %>
  </div>
  <%= f.submit class: "btn btn-success fullwidthbutton" %>
  <%= link_to "Back", events_path, class: "btn btn-warning fullwidthbutton" %>
<% end %>
