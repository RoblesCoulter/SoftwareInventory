<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort]%>
<div class="table-responsive">
  <table class="table table-striped table-hover">
	<thead>
	  <tr>
		<th><%= sortable "name" %></th>
    <th><%= sortable "short_url" %></th>
		<th>Options</th>
	  </tr>
	</thead>

	<tbody>
	  <% @events.each do |event| %>
		<tr data-toggle="modal"  data-name="<%= event.short_url %>" data-target="#contacts-modal" data-id="<%= event.id %>">
		  <td><%= event.name %></td>
		  <td><%= event.short_url %></td>
		  <td><%= link_to 'Universities', event %> |
		  <% if current_user.admin? %>
			<%= link_to 'Edit', edit_event_path(event) %> |
			<%= link_to 'Delete', event, method: :delete %>
		  <% end %>
		  </td>
		</tr>
	  <% end %>
	</tbody>
  </table>
</div>
<%= will_paginate @events, renderer: BootstrapPagination::Rails %>
