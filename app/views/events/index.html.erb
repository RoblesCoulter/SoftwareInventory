<h1 class="text-center">Live Events</h1>

<%= search_form_for @q, url: events_path(page: 1), html: { method: :get, class: "form-inline form-main-search", id: "ajax_search"} do |f| %>
	<div class="form-group">
		<%= f.search_field :short_url_or_name_cont, class: "form-control" %>
		<%= f.submit "Search", :name => nil, class: "incread-width btn btn-primary"%>
	</div>
	<% if current_user.admin? %>
		<%= link_to 'Add Event', new_event_path, class: "top-index-btn btn btn-success" %>
			<% end %>
  	<div id="ajax_objects" ><%= render 'events' %></div>
<% end %>
<% if current_user.admin? %>
  <%= link_to 'Add Event', new_event_path, class: "btn btn-success" %>
<% end %>
