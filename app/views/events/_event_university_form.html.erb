<%= form_for @events_university, url: update_events_university_path, html: { class: "form-horizontal"}, validate: :events_university_validators do |f| %>
  <%= f.fields_for @events_university.embed_code_university, html: { class: "form-horizontal"} do |ff| %>
    <div class="form-group">
      <label class="control-label">Acronym</label>
      <%= ff.text_field :acronym, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="control-label">Name</label>
      <%= ff.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class="control-label">Test Site</label>
      <%= ff.text_field :test_site, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class="control-label">Test User</label><br>
      <%= ff.text_field :test_user, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="control-label">Test Password</label>
      <%= ff.text_field :test_password, class: 'form-control' %>
    </div>
  <% end %>
  <%= f.fields_for @events_university, html: { class: "form-horizontal"} do |ff| %>
  <div class="form-group">
    <label class="control-label">Comments</label>
    <%= ff.text_area :comments, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label">Status</label>
    <%= ff.text_field :status, class: 'form-control' %>
  </div>
  <% end %>
  <%= hidden_field_tag 'events_university_id', @events_university.id %>

  <%= f.submit class: "btn btn-success fullwidthbutton" %>
  <%= link_to "Back", @events_university.event, class: "btn btn-warning fullwidthbutton" %>
<% end %>
