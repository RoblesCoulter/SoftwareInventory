<h1 class="text-center">Conditions</h1>
<%= form_tag conditions_path, method: 'get', class: "form-inline form-main-search", id: "ajax_search" do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], class: "form-control" %>
      <%= submit_tag "Name Search", :name => nil, class: "btn btn-primary" %>
    </div>
 
  <div id="ajax_objects" ><%= render 'conditions' %></div>
<% end %>

<br>
<% if current_user.admin? %>
  <%= link_to 'New Condition', new_condition_path, class: "btn btn-success" %>
<% end %>
