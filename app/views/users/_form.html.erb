<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
	<%= render 'shared/error_messages' %>

	<div class="form-group">
    	<label class="control-label">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
	</div>
	
	<div class="form-group">
		<label class="control-label">E-mail</label>
		<%= f.text_field :email, class: 'form-control' %>
	</div>

	<div class="form-group">
		<label class="control-label">Password</label>
		<%= f.password_field :password, class: 'form_control' %>
	</div>

	<div class="form-group">
		<label class="control-label">Password confirmation</label>
		<%= f.password_field :password_confirmation, class: 'form_control' %>
	</div>

	<div class="form-group">
		<label class="control-label">Is admin?</label>
		<%= f.check_box :admin %>
	</div>

	<%= f.submit class: "btn btn-success" %>
	<%= link_to "Back", users_path, class: "btn btn-warning fullwidthbutton" %>
<% end %>