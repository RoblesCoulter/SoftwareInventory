<div class="center-div">
	<div class="thumbnail">
        <div class="caption-full">
	        <h4><%= @user.name %></h4>

	        <h3><%= @user.email %></h3>

	        <p>
				<strong>Is admin?:</strong>
				<%= @user.admin %>
			</p>
        </div>
    </div>

	<% if current_user.admin? %>
		<%= link_to 'Edit', edit_user_path(@user) , class: "btn btn-warning" %> |
	<% end %>
	<%= link_to 'Back', users_path %>
</div>