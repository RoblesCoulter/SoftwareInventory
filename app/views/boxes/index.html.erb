<h1>Listing boxes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>

        <td><%= link_to 'Show', box %></td>
        <td><%= link_to 'Edit', edit_box_path(box) %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to raw("<span class='glyphicon glyphicon-plus' aria-hidden='true'></span>Add Box"), new_box_path ,class: "btn btn-success" %>
<a class="btn btn-success" href="/boxes/new"><span class="glyphicon glyphicon-plus" ></span>Add Box</a>
