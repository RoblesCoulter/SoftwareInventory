<h1 class="text-center">Box #<%= @box.box_number %> (<%= @box.barcode %>)</h1>
<div class="center-div">
	<div class="thumbnail">
		<%= box_image_for @box %>
		</br>
        <div class="caption-full">
	        <% unless @box.height.nil? && @box.width.nil? && @box.depth.nil? %>
	        	<h4 class="pull-right"><%= @box.height %> x <%= @box.width %> x <%= @box.depth %></h4>
	        <% end %>	
	        <% unless @box.location.nil? %>
	        	<p><b>Location:</b> <%= @box.location.name_with_country %></p>
	        <% end %>
	        <% unless @box.weight.nil? %>
	        	<p><b>Weight:</b> <%= @box.weight %> lbs</p>
	        <% end %>
	        <% unless @box.condition.nil? %>
	        	<p><b>Condition:</b> <%= @box.condition.name %></p>
	        <% end %>
	        <% unless @box.description.nil? %>
	        	<p><b>Description:</b> <%= @box.description %></p>
	        <% end %>
        </div>
	</div>
    <%= link_to "Go to Items", box_items_box_path(@box), class: "btn btn-info fullwidthbutton" %> 

	<% if current_user.admin? %>
		<%= link_to 'Edit', edit_box_path(@box) , class: "btn btn-warning fullwidthbutton" %> 
	<% end %>
	<%= link_to 'Back', boxes_path, class: "btn btn-default fullwidthbutton" %>
</div>