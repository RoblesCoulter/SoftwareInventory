<%= form_for @university_contact, html: { class: "form-horizontal"}, validate: :university_contact_validators do |f| %>
  <div class="form-group">
    <label class="control-label">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Email</label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <label class="control-label">Skype</label>
    <%= f.text_field :skype, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label">Role</label><br>
    <%= f.text_field :role, class: 'form-control' %>
  </div>
  <% if university_id %>
    <%= hidden_field_tag 'university_id', params[:university_id] %>
  <% end %>
  <%= f.submit class: "btn btn-success fullwidthbutton" %>
  <%= link_to "Back", university_contacts_path, class: "btn btn-warning fullwidthbutton" %>
<% end %>
