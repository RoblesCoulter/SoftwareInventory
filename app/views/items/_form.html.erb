<%= form_for @item, html: { class: "form-horizontal"}, validate: :item_validators do |f| %>
  <div class="form-group">
    <label class="control-label">Barcode</label>
    <%= f.text_field :barcode, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Product</label>
    <%= collection_select(:item, :product_id, Product.all, :id, :name, { prompt: "Please select a Product"},{ class: 'form-control'} ) %>
  </div>
  <div class="form-group">
    <label class="control-label">Box (optional)</label>
    <%= collection_select(:item, :box_id, Box.all, :id, :box_number, { prompt: "Please select a Box" }, { class: 'form-control'}) %>

  </div>
  <div class="form-group">
    <label class="control-label">Serial Number (optional)</label>
    <%= f.text_field :serial_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Model Number (optional)</label>
    <%= f.text_field :model_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Price $ (optional) </label>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Location (optional)</label>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Condition (optional)</label>
    <%= f.text_field :condition, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Firmware (optional)</label>
    <%= f.text_field :firmware, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <label class="control-label">Picture (optional)</label><br>
    <label><%= image_for @item %></label>

    <% if current_user.admin? and @item.photo %>
      <%= link_to 'Remove Photo', remove_photo_item_path(@item) %>
    <% end %>

    <%= f.file_field :photo, class: 'form-control', accept: 'image/png,image/gif,image/jpeg' %>
  </div>
  <%= f.submit class: "btn btn-success" %>
  <%= link_to "Back", items_path, class: "btn btn-warning fullwidthbutton" %>
<% end %>
