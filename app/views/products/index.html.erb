<h1 class="text-center">Products</h1>
<%= search_form_for @q, url: products_path, html: { method: :get, class: "form-inline form-main-search", id: "ajax_search"} do |f| %>
	<div class="form-group">
		<%= f.search_field :name_or_brand_or_category_name_cont, class: "form-control" %>
		<%= f.submit "Search", :name => nil, class: "btn btn-primary"%>
	</div>
	<% if current_user.admin? %>
	  <%= link_to 'Add Product', new_product_path, class: "btn btn-success top-index-btn" %>
	<% end %>
  <div id="ajax_objects" ><%= render 'products' %></div>
<% end %>
<% if current_user.admin? %>
  <%= link_to 'Add Product', new_product_path, class: "btn btn-success" %>
<% end %>
