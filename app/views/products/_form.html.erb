<%= form_for @product, html: { class: "form-horizontal"}, validate: :product_validators do |f| %>
  <div class="form-group">
    <label class="control-label">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Brand</label>
    <%= f.text_field :brand, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Category</label>
    <%= collection_select(:product, :category_id, Category.all, :id, :name, { prompt: "Please select a Category" }, { class: 'form-control'}) %>
  </div>
  <%= f.submit class: "btn btn-success" %>
  <%= link_to "Back", products_path, class: "btn btn-warning fullwidthbutton" %>
<% end %>
